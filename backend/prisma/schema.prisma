generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model TimeEntry {
  id          Int      @id @default(autoincrement())
  date        String   // Зберігаємо як "YYYY-MM-DD"
  project     String
  hours       Float
  description String
  createdAt   DateTime @default(now())
}